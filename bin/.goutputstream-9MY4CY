#!/bin/bash

PROCESSNAME="mdb27017"
CONFIG="..\ini\mongodb.conf"

INSTALL=0
START=0
END=0

for i in "$@"
do
case $i in
    --install|-i)
    INSTALL=1
    shift # past argument with no value
    ;;
    --start|-s)
    START=1
    shift # past argument with no value
    ;;
    --end|-e)
    END=1
    shift # past argument with no value
    ;;
    --restart|-r)
    END=1
    START=1
    shift # past argument with no value
    ;;
    *)
            # unknown option
    ;;
esac
done



if [INSTALL]; then
    mongod -f ${CONFIG} --install
fi

if [RESTART -o (START -a END)]; then
    echo
elif [START]; then
    net start ${NAME}
elif [END]; then
    net stop ${NAME}
fi

read -n1 -r -p "Press space to continue..." key
