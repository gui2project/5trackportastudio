mixin fader-controls(trknum)
    // Fader Controls
    div.row
        div(class="track-fader")
            div.mute.col-md-6.col-sm-6.col-xs-6(class='track-fader-mute', value=trknum)
                button
                    i MUTE
            div.record.col-md-6.col-sm-6.col-xs-6(class='track-fader-record', value=trknum)
                button
                    i(class="fa fa-circle")