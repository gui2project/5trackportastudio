include ../../icon-header.jade

mixin fader-slider(trknum, top)
    // Fader Slider
    if (top == true)
        div.row.top-sm-view
            div.fader.track-fader-slider(value=trknum)
                input.slider(type='text')
            div.col-md-6.meter(data-vol=0)
    else if (top == false)
        div.row.top-bg-view
            div.fader.track-fader-slider(value=trknum)
                input.slider(type='text')
            div.col-md-6.meter(data-vol=0)

