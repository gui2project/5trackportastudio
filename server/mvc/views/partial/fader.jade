extends ../layout/index

mixin fader(trknum)
    div.row
        div(class="track-fader")
            div.mute(class='track-fader-mute', value=trknum)
                button
                    i(class="fa fa-volume-off")
            div.solo(class='track-fader-solo', value=trknum)
                button
                    i(class="fa fa-toggle-on")
            div.record(class='track-fader-record', value=trknum)
                button
                    i(class="fa fa-circle")
     div.row
        div.fader(class='track-fader-slider', value=trknum)
            input.slider(type='text')