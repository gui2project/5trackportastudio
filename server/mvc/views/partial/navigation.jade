include ../partial/dropdown.jade

mixin navigation()
    // Navigation bar
    header
        nav.navbar.navbar-default.navbar-static-top(id="navigation")
            div.container.col-md-12.col-sm-12.col-xs-12
                div.navbar-header.col-md-2.col-sm-3.col-xs-6
                     span.navbar-brand.col-md-12.col-sm-12.col-xs-12
                        span.pointer.navbar-brand-label(onClick="dd.show('TOGGLE');") trackstudio

                div.navbar-right-links.col-md-3.col-sm-3.col-xs-6
                     a.pointer.link-sign-in(onClick="dd.show('LOGIN');")
                        span sign in
                     a.pointer.link-register(onClick="dd.show('REGISTER');")
                        span register
                     a.pointer.link-sign-out
                        span sign out

        +dropdown('partial')